{
  "name": "dragon",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "build:frontend": "npm run build -w frontend",
    "lint": "npm run lint:fs && npm run lint --workspaces --if-present",
    "lint:css": "npm run lint:css --workspaces --if-present",
    "lint:fs": "ls-lint",
    "lint:js": "npm run lint:js --workspaces --if-present",
    "start:frontend": "npm start -w frontend"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint:fs",
    "*.{ts,tsx,json,scss}": "prettier --write",
    "frontend/**/*.{ts,tsx}": "npm run lint:js",
    "frontend/**/*.scss": "npm run lint:css"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.11.2",
    "@stylelint/prettier-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "lint-staged": "^13.0.3",
    "ls-lint": "^0.1.2",
    "prettier": "2.7.1",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  }
}
